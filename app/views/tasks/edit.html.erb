<h1>Edit Task: <%= @task.title %></h1>

<%= form_with(model: [@week, @task], local: true) do |form| %>
    <div class="field">
      <%= form.label :title %>
      <%= form.text_field :title %>
     </div>

     <div class="field">
       <%= form.label :date %>
       <%= form.date_field :date %>
      </div>

      <div class="field">
        <%= form.label :description %>
        <%= form.text_area :description %>
      </div>

     <%= form.submit 'Update Task', class: "btn btn-primary" %>
     <% end %>

   <%= link_to 'Back to Tasks', week_tasks_path(@week), class: "btn btn-secondary" %>
